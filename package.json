{
  "name": "h3ravel-monorepo",
  "private": false,
  "version": "0.1.2",
  "description": "Monorepo for H3ravel, a modern TypeScript runtime-agnostic web framework built on H3.",
  "type": "module",
  "homepage": "https://h3ravel.toneflix.net",
  "repository": "github:h3ravel/framework",
  "keywords": [
    "h3ravel",
    "modern",
    "web",
    "H3",
    "framework",
    "nodejs",
    "typescript",
    "laravel",
    "bun",
    "denoland",
    "deno"
  ],
  "scripts": {
    "barrel": "pnpm -r --filter './packages/*' run barrel",
    "build": "pnpm barrel && pnpm -r --workspace-concurrency=1 --filter './packages/*' run build",
    "dev": "pnpm barrel && pnpm -r --parallel --filter './examples/*' run dev",
    "devx": "pnpm './packages/*' run dev",
    "start": "pnpm --filter @h3ravel/core start",
    "lint": "pnpm -r --filter './packages/*' run lint",
    "test": "NODE_NO_WARNINGS=1 NODE_ENV=testing jest --passWithNoTests",
    "coverage": "NODE_NO_WARNINGS=1 NODE_ENV=testing JEST_JUNIT_CLASSNAME=coverage jest --passWithNoTests --coverage --coverageDirectory=coverage",
    "prepare": "husky",
    "postinstall": "pnpm barrel",
    "undev": "tsx watch packages/core/src/main.ts",
    "cleanup": "find . \\( -name 'node_modules' -o -name 'dist' \\) -type d -prune -exec rm -rf '{}' +",
    "release": "pnpm build && pnpm changeset version && pnpm changeset publish",
    "publish": "pnpm build && pnpm -r publish --access public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/js": "^9.32.0",
    "@swc/core": "^1.13.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "barrelsby": "^2.8.1",
    "eslint": "^9.0.0",
    "fetchdts": "^0.1.6",
    "husky": "^9.0.0",
    "install": "^0.13.0",
    "jest": "^30.0.0",
    "jest-junit": "^16.0.0",
    "path": "^0.12.7",
    "pnpm": "^10.14.0",
    "ts-jest": "^29.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.0",
    "typescript": ">=5.4.0 <5.9.0",
    "typescript-eslint": "^8.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
