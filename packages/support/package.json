{
  "name": "@h3ravel/support",
  "version": "0.8.5",
  "description": "Shared helpers, facades and utilities for H3ravel.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://h3ravel.toneflix.net",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h3ravel/framework.git",
    "directory": "packages/support"
  },
  "keywords": [
    "h3ravel",
    "modern",
    "web",
    "H3",
    "framework",
    "nodejs",
    "typescript",
    "laravel"
  ],
  "scripts": {
    "barrel": "barrelsby --directory src --delete --singleQuotes",
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "@h3ravel/shared": "workspace:^"
  }
}
